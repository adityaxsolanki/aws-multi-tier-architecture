pipeline {
  agent any

  stages {
    stage('Clone Repository') {
      steps {
        echo "Cloning GitHub Repository..."
        git branch: 'main', url: 'https://github.com/adityaxsolanki/aws-multi-tier-architecture.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        echo "Building Docker Image..."
        sh '''
          docker build -t aws-multi-tier-app:latest .
        '''
      }
    }

    stage('Deploy App') {
      steps {
        echo "Deploying Docker Container..."
        sh '''
          docker stop app || true
          docker rm app || true
          docker run -d --name app -p 80:80 aws-multi-tier-app:latest
        '''
      }
    }
  }

  post {
    success {
      echo "✅ Jenkins Pipeline Successful | AWS Multi-Tier Architecture"
    }
    failure {
      echo "❌ Jenkins Pipeline Failed | Troubleshoot Needed"
    }
  }
}
